<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal">
    <EditText 
    	android:hint="Username" 
    	android:id="@+id/username"
    	android:background="@drawable/tabletop" 
    	style="@style/tableInput"
    	></EditText>
	<EditText 
		android:hint="Password"
		android:id="@+id/password"
		android:inputType="textPassword"
    	android:background="@drawable/tablebottom" 
    	style="@style/tableInput"
		>
		</EditText>
	<Button android:text="Login" android:id="@+id/login"
		android:layout_width="120dp" android:layout_height="wrap_content"></Button>
	<Button android:text="Create New Account" android:id="@+id/createNewAccount" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>	
</LinearLayout>
